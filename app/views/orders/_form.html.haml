= form_for(@order) do |f|
  - if @order.errors.any?
    #error_explanation
      %h2
        = pluralize(@order.errors.count, "error")
        prohibited this order from being saved:
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :date
    %br/
    = f.date_select :date
  .field
    = f.label :total_amount
    %br/
    = f.number_field :total_amount
  .field
    = f.label :user_id
    %br/
    = f.number_field :user_id
  .field
    = f.label :shipping_address
    %br/
    = f.text_field :shipping_address
  .actions
    = f.submit
