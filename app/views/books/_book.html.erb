<!-- display book list -->
  <div class="row">
    <div class="col-md-11">
      <div class="row">
        <div class="col-md-8">
          <h4><strong><%= book.title %></strong></h4>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <a href="#" class="thumbnail">
              <%= image_tag(book.img_url, :size => "260x180") %>
          </a>
        </div>
        <div class="col-md-9">      
          <p>
            <%= sanitize(book.description) %>
          </p>
          <p><%= link_to "Show Details", book_path(:id => book.id), :class => 'btn btn-success' %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8">
          <p></p>
          <p>
            <i class="glyphicon glyphicon-user"></i> Writen By <strong><%= book.author %></strong> 
            |<i class="glyphicon glyphicon-user"></i> Published By <strong><%= book.publisher %></strong> 
            | <i class="glyphicon glyphicon-comment"></i> Rating Counts <strong><%= book.rating_count %></strong>  
            | <i class="glyphicon glyphicon-comment"></i> Book ID <strong><%= book.id %></strong>     
          </p>
        </div>
      </div>
    </div>
  </div>
  <hr>