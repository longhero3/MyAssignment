= form_for(@book) do |f|
  - if @book.errors.any?
    #error_explanation
      %h2
        = pluralize(@book.errors.count, "error")
        prohibited this book from being saved:
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :author
    %br/
    = f.text_field :author
  .field
    = f.label :publisher
    %br/
    = f.text_field :publisher
  .field
    = f.label :published_date
    %br/
    = f.text_field :published_date
  .field
    = f.label :price
    %br/
    = f.text_field :price
  .field
    = f.label :img_url
    %br/
    = f.text_field :img_url
  .field
    = f.label :total_rating_value
    %br/
    = f.text_field :total_rating_value
  .field
    = f.label :rating_count
    %br/
    = f.number_field :rating_count
  .actions
    = f.submit
